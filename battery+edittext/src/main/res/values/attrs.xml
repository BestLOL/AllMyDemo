<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义控件属性-->
    <declare-styleable name="Battery">
        <!--电池方向-->
        <attr name="batteryOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>

        <!--电池颜色-->
        <attr name="batteryColor" format="color"/>

        <!--电池电量-->
        <attr name="batteryPower" format="integer"/>
    </declare-styleable>

    <!--自定义EditText-->
    <declare-styleable name="MyEditText">
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderRadius" format="dimension"/>
        <attr name="passwordLength" format="integer"/>
        <attr name="passwordWidth" format="dimension"/>
        <attr name="passwordColor" format="color"/>
        <attr name="passwordRadius" format="dimension"/>
    </declare-styleable>

</resources>